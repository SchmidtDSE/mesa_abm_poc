{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Solara: Launch",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "solara",
      "args": ["run", "vegetation/app.py"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
      "envFile": "${workspaceFolder}/.devcontainer/.env"
    },
    {
      "name": "Python: Mesa Batch Run (Interactive)",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "vegetation.batch",
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
      "args": ["--interactive"],
      "envFile": "${workspaceFolder}/.devcontainer/.env"
    },
    {
      "name": "Python: Mesa Batch Run (CLI Args)",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "vegetation.batch",
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
      "args": ["--steps", "2", "--iterations", "2", "--name", "initial_test_from_config", "--overwrite"],
      "envFile": "${workspaceFolder}/.devcontainer/.env"
    },
    {
      "name": "Python: Build Cache",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "vegetation.cache_manager",
      "justMyCode": false,
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
      "envFile": "${workspaceFolder}/.devcontainer/.env"
    },
    {
      "name": "Python: Process Zarr",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "vegetation.analysis.process_zarr",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.devcontainer/.env",
      "args": ["--zarr_path", "/workspaces/mesa_abm_poc/vegetation.zarr", "--group_name", "initial_test"],
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
    }
  ]
}
