{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Solara: Launch",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "solara",
      "args": ["run", "vegetation/app.py"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
      "envFile": "${workspaceFolder}/.devcontainer/.env"
    },
    {
      "name": "Python: Mesa Batch Run (Interactive)",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "vegetation.batch.run",
      "justMyCode": false,
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
      "args": ["--interactive"],
      "envFile": "${workspaceFolder}/.devcontainer/.env"
    },
    {
      "name": "Python: Mesa Batch Run (Config JSON)",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "vegetation.batch.run",
      "justMyCode": false,
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
      "args": ["--simulation_name", "test_run_no_zarr", "--attribute_encodings_json", "vegetation/config/attribute_encodings.json", "--aoi_bounds_json", "vegetation/config/aoi_bounds.json", "--batch_parameters_json", "vegetation/config/batch_parameters.json", "--overwrite"],
      "envFile": "${workspaceFolder}/.devcontainer/.env"
    },
    {
      "name": "Python: Process Zarr",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "module": "vegetation.analysis.process_zarr",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.devcontainer/.env",
      "args": ["--zarr_path", "/workspaces/mesa_abm_poc/vegetation.zarr", "--group_name", "first_realish_run"],
      "pythonPath": "/workspaces/mesa_abm_poc/.pixi/envs/default/bin/python",
    }
  ]
}
